<resources>

    <!-- Base application theme. -->
    <style name="Theme.Tiyanr" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_tiyanr</item>
        <item name="popupMenuStyle">@style/PopupMenu.Tiyanr</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Tiyanr</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Tiyanr</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Tiyanr</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Tiyanr</item>
        <item name="actionModeBackground">@drawable/cab_background_top_tiyanr</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_tiyanr</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tiyanr</item>


    </style>

    <style name="ActionBar.Solid.Tiyanr" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_tiyanr</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_tiyanr</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_tiyanr</item>
        <item name="progressBarStyle">@style/ProgressBar.Tiyanr</item>
    </style>

    <style name="ActionBar.Transparent.Tiyanr" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_tiyanr</item>
        <item name="progressBarStyle">@style/ProgressBar.Tiyanr</item>
    </style>

    <style name="PopupMenu.Tiyanr" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tiyanr</item>
    </style>

    <style name="DropDownListView.Tiyanr" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_tiyanr</item>
    </style>

    <style name="ActionBarTabStyle.Tiyanr" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_tiyanr</item>
    </style>

    <style name="DropDownNav.Tiyanr" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_tiyanr</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tiyanr</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_tiyanr</item>
    </style>

    <style name="ProgressBar.Tiyanr" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_tiyanr</item>
    </style>

    <style name="ActionButton.CloseMode.Tiyanr" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_tiyanr</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Tiyanr.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Tiyanr</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Tiyanr</item>
    </style>

</resources>
